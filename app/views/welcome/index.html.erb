<p>Welcome to Venturebelt.com</p>

<% if @current_user %>
  <p>Welcome back <%= "#{@current_user.first_name} #{@current_user.last_name}"%></p>
  <p><%= link_to 'Log Out', logout_path, method: 'DELETE' %></p>
<% else %>
  <p><%= link_to 'Sign Up', new_user_path %></p>
  <p><%= link_to 'Log In', login_path %></p>
<% end %>


<p>Start all gear</p>
<% if @gear %>
  <% @gear.each do |x| %>
  <ol>
    <li><%= x.category %></li>
    <li><%= x.brand %></li>
    <li><%= x.model %></li>
    <li><%= x.year %></li>
    <li><%= x.name %></li>
  </ol>
  <% end %>
<% end %>
<p>End all gear</p>